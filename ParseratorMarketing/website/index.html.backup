    <script>
        // Navigation scroll effect
        const nav = document.querySelector('.nav');
        let lastScrollY = window.scrollY;

        window.addEventListener('scroll', () => {
            const currentScrollY = window.scrollY;
            
            // Add scrolled class for styling
            if (currentScrollY > 100) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
            
            lastScrollY = currentScrollY;
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ 
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Enhanced Intersection Observer for staggered animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -80px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        entry.target.classList.add('animate-in');
                    }, index * 100); // Stagger the animations
                }
            });
        }, observerOptions);

        // Observe all cards for animation with staggered entrance
        document.querySelectorAll('.card, .manifesto-card, .principle-card, .feature-card').forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            card.style.transition = 'opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), transform 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
            observer.observe(card);
        });

        // Clear Seas Solutions enhanced interaction
        const clearSeasText = document.querySelector('.clear-seas-text');
        if (clearSeasText) {
            let isHovering = false;
            
            clearSeasText.addEventListener('mouseenter', function() {
                isHovering = true;
                this.style.transform = 'translateY(-2px) scale(1.02)';
            });
            
            clearSeasText.addEventListener('mouseleave', function() {
                isHovering = false;
                this.style.transform = 'translateY(0) scale(1)';
            });

            // Subtle breathing animation when not hovering
            setInterval(() => {
                if (!isHovering) {
                    clearSeasText.style.transform = 'translateY(0) scale(1.005)';
                    setTimeout(() => {
                        if (!isHovering) {
                            clearSeasText.style.transform = 'translateY(0) scale(1)';
                        }
                    }, 2000);
                }
            }, 4000);
        }

        // Parallax effect for hero background
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const parallax = document.querySelector('.hero::before');
            if (parallax) {
                const speed = scrolled * 0.5;
                // Subtle parallax effect
            }
        });

        // Mouse tracking for cards
        document.querySelectorAll('.card, .principle-card, .feature-card, .manifesto-card').forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                
                const deltaX = (x - centerX) / centerX;
                const deltaY = (y - centerY) / centerY;
                
                // Subtle tilt effect
                card.style.transform += ` perspective(1000px) rotateX(${deltaY * 2}deg) rotateY(${deltaX * 2}deg)`;
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.transform = card.style.transform.replace(/perspective\([^)]*\)\s*rotateX\([^)]*\)\s*rotateY\([^)]*\)/g, '');
            });
        });

        // Add loading animation for fade-in elements
        document.addEventListener('DOMContentLoaded', function() {
            const fadeElements = document.querySelectorAll('.fade-in');
            fadeElements.forEach((element, index) => {
                setTimeout(() => {
                    element.style.opacity = '1';
                    element.style.transform = 'translateY(0)';
                }, index * 150);
            });
        });

        // Status dot animation enhancement
        const statusDots = document.querySelectorAll('.status-dot');
        statusDots.forEach(dot => {
            setInterval(() => {
                dot.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    dot.style.transform = 'scale(1)';
                }, 200);
            }, 3000);
        });
    </script>
