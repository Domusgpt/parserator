{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "!/auth/callback.html",
        "destination": "/index.html"
      },
      {
        "source": "!/terms-of-service.html",
        "destination": "/index.html"
      },
      {
        "source": "!/privacy-policy.html",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
