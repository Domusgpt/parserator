rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // API keys can be read by authenticated users who own them
    match /api_keys/{keyId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Usage logs can be read by authenticated users who own them
    match /usage_logs/{logId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Admin access for server-side operations
    match /{document=**} {
      allow read, write: if false; // Deny all other access
    }
  }
}