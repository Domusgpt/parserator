{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"], // Added DOM lib for potential browser environments, though client is mostly Node.js focused
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src", // Root directory is src
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    // Add this if you plan to use decorators, otherwise optional
    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*.ts" // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__" // Exclude test files from the main compilation output
  ]
}
