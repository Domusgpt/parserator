{
  "manifest_version": 3,
  "name": "Parserator",
  "version": "1.0.0",
  "description": "Transform unstructured text into structured JSON using AI-powered parsing",
  "author": "Paul Phillips <phillips.paul.email@gmail.com>",
  
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  
  "host_permissions": [
    "https://app-5108296280.us-central1.run.app/*",
    "https://api.parserator.com/*",
    "http://localhost/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Parserator - AI-Powered Text Parsing",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "options_page": "src/options/options.html",
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "commands": {
    "parse-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Parse selected text with Parserator"
    },
    "quick-parse": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Quick parse with default schema"
    },
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Parserator side panel"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      }
    }
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*.png",
        "src/sidepanel/sidepanel.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}